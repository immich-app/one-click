{
  "variables": {
    "do_api_token": "{{env `DIGITALOCEAN_API_TOKEN`}}",
    "image_name": "immich-24-04-snapshot-{{timestamp}}",
    "apt_packages": "apt-transport-https ca-certificates curl jq linux-image-extra-virtual software-properties-common ",
    "application_name": "Immich",
    "application_version": "release",
    "docker_compose_version": "",
    "ci_branch_name": "{{env `GITHUB_IMMICH_BRANCH`}}",
    "immich_test_run_timeout": "{{env `IMMICH_TEST_RUN_TIMEOUT`}}",
    "immich_test_run_endpoint": "{{env `IMMICH_TEST_RUN_ENDPOINT`}}",
    "immich_test_run_sleep_time": "{{env `IMMICH_TEST_RUN_SLEEP_TIME`}}",
    "immich_test_prod_branch": "{{env `IMMICH_TEST_PROD_BRANCH`}}"
  },
  "sensitive-variables": [
    "do_api_token"
  ],
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `do_api_token`}}",
      "image":"ubuntu-24-04-x64",
      "region": "nyc3",
      "size":"s-1vcpu-2gb",
      "ssh_username": "root",
      "snapshot_name": "{{user `image_name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "cloud-init status --wait"
      ]
    },
    {
      "type": "file",
      "source": "files/var/",
      "destination": "/var/"
    },
    {
      "type": "file",
      "source": "files/etc/",
      "destination": "/etc/"
    },
    {
      "type": "file",
      "source": "../generic/files/opt/",
      "destination": "/opt/"
    },
    {
      "type": "shell",
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive",
        "LC_ALL=C",
        "LANG=en_US.UTF-8",
        "LC_CTYPE=en_US.UTF-8"
      ],
      "inline": [
        "apt -qqy update",
        "apt -qqy -o Dpkg::Options::='--force-confdef' -o Dpkg::Options::='--force-confold' full-upgrade",
        "apt -qqy -o Dpkg::Options::='--force-confdef' -o Dpkg::Options::='--force-confold' install {{user `apt_packages`}}",
        "apt-get -qqy clean"
      ]
    },
    {
      "type": "shell",
      "environment_vars": [
        "application_name={{user `application_name`}}",
        "application_version={{user `application_version`}}",
        "docker_compose_version={{user `docker_compose_version`}}",
        "DEBIAN_FRONTEND=noninteractive",
        "LC_ALL=C",
        "LANG=en_US.UTF-8",
        "LC_CTYPE=en_US.UTF-8",
        "CI_REF={{user `ci_branch_name`}}",
        "IMMICH_TEST_RUN_TIMEOUT={{user `immich_test_run_timeout`}}",
        "IMMICH_TEST_RUN_ENDPOINT={{user `immich_test_run_endpoint`}}",
        "IMMICH_TEST_RUN_SLEEP_TIME={{user `immich_test_run_sleep_time`}}",
        "IMMICH_TEST_PROD_BRANCH={{user `immich_test_prod_branchh`}}"
      ],
      "scripts": [
        "../generic/scripts/010-docker.sh",
        "../generic/scripts/011-docker-compose.sh",
        "../generic/scripts/012-grub-opts.sh",
        "../generic/scripts/013-docker-dns.sh",
        "../generic/scripts/015-immich.sh",
        "../generic/scripts/016-ufw-immich.sh",
        "../generic/scripts/020-application-tag.sh",
        "../generic/scripts/90-cleanup.sh",
        "scripts/95-pre-check.sh",
        "scripts/99-img-check.sh"
      ]
    }
  ]
}
